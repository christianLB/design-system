{
  "name": "@christianlb/design-system",
  "version": "4.0.0",
  "description": "A comprehensive design system built with React, TypeScript, and CSS with full automation and AI-powered maintenance capabilities.",
  "author": "k2600x <k2600x@gmail.com>",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./style.css": "./dist/design-system.css"
  },
  "files": [
    "dist",
    "README.md",
    "REQUIREMENTS.md",
    "tailwind.preset.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm run generate:css-variables && pnpm run build:vite && tsup",
    "build:vite": "vite build",
    "build:tsup": "tsup",
    "build:dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "size": "size-limit",
    "generate:css-variables": "tsx scripts/generate-css-variables.ts",
    "generate:theme": "tsx scripts/generate-theme.ts",
    "generate:theme-css": "tsx scripts/generate-theme-css.ts",
    "generate:docs": "tsx scripts/generate-docs-ai.ts",
    "generate:docs:all": "tsx scripts/generate-all-docs.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:changed": "vitest related --run",
    "storybook": "storybook dev",
    "storybook:build": "storybook build",
    "build-storybook": "storybook build",
    "test-storybook": "node scripts/test-storybook.cjs",
    "check:storybook": "node scripts/check-storybook.cjs",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint .",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "auto-maintain": "tsx scripts/auto-maintain.ts",
    "quality-audit": "tsx scripts/quality-audit.ts",
    "update-deps": "tsx scripts/update-dependencies.ts",
    "analyze-bundle": "tsx scripts/bundle-analyzer.ts",
    "check-a11y": "tsx scripts/accessibility-check.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": "prettier --write"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mdx-js/react": "^3.1.0",
    "@playwright/test": "^1.52.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/mdx2-csf": "^1.1.0",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test-runner": "^0.22.1",
    "@tailwindcss/cli": "^4.1.7",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.19",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.1.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "markdown-it": "^14.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^24.2.7",
    "size-limit": "^11.2.0",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.7",
    "ts-jest": "^29.3.4",
    "ts-morph": "^26.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.1.6",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-table": "^8.21.3",
    "@types/react-select": "^5.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colord": "^2.9.3",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.511.0",
    "react-hook-form": "^7.58.1",
    "react-select": "^5.10.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.4"
  }
}
