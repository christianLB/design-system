{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "declarationDir": "dist/types",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@types/*": ["./src/types/*"]
    },
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "composite": true,
    "incremental": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "src/**/*",
    "components/**/*.tsx",
    "components/**/*.ts",
    "lib/**/*.ts",
    "hooks/**/*.ts",
    "docs/**/*.ts",
    "docs/**/*.tsx",
    "scripts/**/*.ts",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ]
}